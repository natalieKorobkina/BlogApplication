@model ContactViewModel

@{
    ViewBag.Title = "Contact";
}

<link href="~/css/contact.css" rel="stylesheet" type="text/css">

<h2>@ViewBag.Title.</h2>
@*<h3>@ViewBag.Message</h3>*@

@*<address>
        One Microsoft Way<br />
        Redmond, WA 98052-6399<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>*@

<section class="fourth">
    <div class="contact-form">
        <form id="frm" method="post">
            <h4>Send me a message:</h4>
            @Html.TextBoxFor(input => input.Name, new { @class = "input-box", id = "name", placeholder = "Name", required = "required" })
            @Html.TextBoxFor(input => input.Email, new { @class = "input-box", id = "email", placeholder = "Email address", required = "required" })
            @Html.TextBoxFor(input => input.Subject, new { @class = "input-box", id = "subject", placeholder = "Subject", required = "required" })
            @Html.TextAreaFor(input => input.Message, new { @class = "input-box", placeholder = "Message", rows = 8, columns = 32, required = "required" })
            <button class="send" id="btn-send" type="submit">Send</button>
        </form>
    </div>
</section>

